# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp

# JWT Secret (use a strong, random secret in production)
JWT_SECRET=your-super-secret-jwt-key-here

# HTTPS Configuration
HTTPS=true
SSL_CRT_FILE=backend/keys/server.crt
SSL_KEY_FILE=backend/keys/privatekey.pem

# Password Security
PASSWORD_PEPPER=your-secret-pepper-here

# Development Settings
USE_IN_MEMORY=true
